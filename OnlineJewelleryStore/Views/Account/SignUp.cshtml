        <div class="col-md-12">
            <input type="submit" value="Sign Up" class="btn btn-primary btn-sm signUpButton" />
            @Html.ActionLink(
               "Back",
               "Index",
               "Home",
               new { },
               new {
                   @class = "btn btn-primary btn-sm backButton"
               }
           )
        </div>
    </div>
