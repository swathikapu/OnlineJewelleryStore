            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Tbl_Category.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tbl_Category.Name)
            </dd>
